<numericalExperiment documentVersion="3" control="false"
    xmlns="http://www.metaforclimate.eu/cim/1.4"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.metaforclimate.eu/cim/1.4 C:\Users\clp73\Desktop\Metafor\subversion\CIM\branches\dev0p3\activity.xsd"
    xmlns:xlink="http://www.w3.org/1999/xlink" 
    xmlns:gmd="http://www.isotc211.org/2005/gmd"
    xmlns:gco="http://www.isotc211.org/2005/gco">
    
    <rationale>Provide estimate of future anthropogenic climate change.</rationale>
    <description> Future projection (2006-2100) forced by RCP8.5.
        RCP8.5 is a representative concentration pathway which approximately results in a radiative 
        forcing of 8.5 W m-2 at year 2100, relative to pre-industrial conditions.
        RCPs are time-dependent, consistent projections of emissions and concentrations 
        of radiatively active gases and particles.
    </description>
    <!-- Representative Concentration Pathway Experiment (2006-2100)
        * Initial conditions from 3.2::historical 
        * Radiative forcing stabilizes at ~8.5 W m-2 after 2100 wrt 3.1::pi-control
        (If ESM (Earth System Model), save CO2 fluxes from the surface 
        to calculate allowable emissions to compare to experiment 5.4) -->
    
    <!-- Initial Conditions -->
    <numericalRequirement xsi:type="InitialCondition">
        <id xsi:type="Identifier">ic.004</id>
        <name xsi:type="Identifier">4.2.ic</name>
        <description> Initial conditions are from the end of experiment 3.2_historical </description>
    </numericalRequirement>
    
    <!-- Boundary/Forcing Conditions -->
    <numericalRequirement xsi:type="BoundaryCondition">
        <name xsi:type="Identifier">4.2.bc.wmg</name>
        <description>Imposed changing concentrations or emissions of RCP8.5 well mixed gases, including CO2</description>
        <requirementOption>
            <id xsi:type="Identifier">bc.035</id>
            <name xsi:type="Identifier">4.2.bc.wmg_conc</name>
            <description>Concentrations</description>            
        </requirementOption>
        <requirementOption>
            <id xsi:type="Identifier">bc.039</id>
            <name xsi:type="Identifier">4.2.bc.wmg_em</name>
            <description>Emissions</description>            
        </requirementOption>
    </numericalRequirement>  
    
    <numericalRequirement xsi:type="BoundaryCondition">
        <name xsi:type="Identifier">4.2.bc.sls</name>
        <description>Imposed changing concentrations or emissions of RCP8.5 short lived gas species</description>
        <requirementOption>
            <id xsi:type="Identifier">bc.036</id>
            <name xsi:type="Identifier">4.2.bc.sls_conc</name>
            <description>Concentrations</description>            
        </requirementOption>
        <requirementOption>
            <id xsi:type="Identifier">bc.040</id>
            <name xsi:type="Identifier">4.2.bc.sls_em</name>
            <description>Emissions</description>            
        </requirementOption>
    </numericalRequirement>
    
    <numericalRequirement xsi:type="BoundaryCondition">
        <name xsi:type="Identifier">4.2.bc.aer</name>
        <description>Imposed changing concentrations or emissions of RCP8.5 aerosols </description>
        <requirementOption>
            <id xsi:type="Identifier">bc.037</id>
            <name xsi:type="Identifier">4.2.bc.aer_conc</name>
            <description>Concentrations</description>            
        </requirementOption>
        <requirementOption>
            <id xsi:type="Identifier">bc.041</id>
            <name xsi:type="Identifier">4.2.bc.aer_em</name>
            <description>Emissions</description>            
        </requirementOption>
    </numericalRequirement>
    
    <numericalRequirement xsi:type="BoundaryCondition">
        <name xsi:type="Identifier">4.2.bc.aer_pre</name>
        <description>Imposed changing concentrations or emissions of RCP8.5 aerosol precursors </description>
        <requirementOption>
            <id xsi:type="Identifier">bc.038</id>
            <name xsi:type="Identifier">4.2.bc.aer_pre_conc</name>
            <description>Concentrations</description>            
        </requirementOption>
        <requirementOption>
            <id xsi:type="Identifier">bc.042</id>
            <name xsi:type="Identifier">4.2.bc.aer_pre_em</name>
            <description>Emissions</description>            
        </requirementOption>
    </numericalRequirement>
    
    <numericalRequirement xsi:type="BoundaryCondition">
        <id xsi:type="Identifier">bc.043</id>
        <name xsi:type="Identifier">4.2.bc.LU</name>
        <description>Imposed changing RCP8.5 land use </description>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <id xsi:type="Identifier">bc.034</id>
        <name xsi:type="Identifier">4.2.bc.volc_aer_conc</name>
        <description>Imposed constant background volcanic aerosol</description>
    </numericalRequirement>
    
    <shortName>4.2 rcp85</shortName>
    <longName>4.2 RCP8.5</longName>
    
    <calendar>
        <realCalendar/>
    </calendar>
    <numericalRequirement xsi:type="SpatioTemporalConstraint"><name xsi:type="Identifier">4.2.stc.2006_94yr</name><id xsi:type="Identifier">stc.030</id><description>Begin in 2006 and run for 94 years </description><requiredDuration xsi:type="ClosedDateRange">
        <startDate>2006-01-01T00:00:00Z</startDate>
        <endDate>2100-01-01T00:00:00Z</endDate>
        <length units="years">94</length>
    </requiredDuration></numericalRequirement>
    
