<?xml version="1.0" encoding="UTF-8"?>
<numericalExperiment documentVersion="1" control="false" xmlns="http://www.metaforclimate.eu/cim/1.4" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.metaforclimate.eu/cim/1.4 Z:\CIM\XSDs\dev0p3\activity.xsd" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:gmd="http://www.isotc211.org/2005/gmd" xmlns:gco="http://www.isotc211.org/2005/gco">
    
    <rationale>Provide estimate of future anthropogenic climate change</rationale>
    <description>Future projection (2006-2100) forced by RCP6.
        RCP6 is a representative concentration pathway which approximately results in a radiative 
        forcing of 6 W m-2 at year 2100, relative to pre-industrial conditions. </description>
	
	<!-- Initial Conditions -->
	<numericalRequirement xsi:type="InitialCondition">
        <id xsi:type="Identifier">ic.004</id>
        <name xsi:type="Identifier">4.4.ic</name>
        <description> Initial conditions are from the end of experiment 3.2_historical </description>
    </numericalRequirement>
    
    <!-- Boundary/Forcing Conditions -->
    <numericalRequirement xsi:type="BoundaryCondition">
        <name xsi:type="Identifier">4.4.bc.wmg</name>
        <description>Imposed changing concentrations or emissions of RCP6 well mixed gases, including CO2</description>
        <requirementOption>
            <id xsi:type="Identifier">bc.085</id>
            <name xsi:type="Identifier">4.4.bc.wmg_conc</name>
            <description>Concentrations</description>            
        </requirementOption>
        <requirementOption>
            <id xsi:type="Identifier">bc.089</id>
            <name xsi:type="Identifier">4.4.bc.wmg_em</name>
            <description>Emissions</description>            
        </requirementOption>
    </numericalRequirement>
    
    <numericalRequirement xsi:type="BoundaryCondition">
        <name xsi:type="Identifier">4.4.bc.sls</name>
        <description>Imposed changing concentrations or emissions of RCP6 short lived gas species </description>
        <requirementOption>
            <id xsi:type="Identifier">bc.086</id>
            <name xsi:type="Identifier">4.4.bc.sls_conc</name>
            <description>Concentrations</description>            
        </requirementOption>
        <requirementOption>
            <id xsi:type="Identifier">bc.090</id>
            <name xsi:type="Identifier">4.4.bc.sls_em</name>
            <description>Emissions</description>            
        </requirementOption>
    </numericalRequirement>    
    
    <numericalRequirement xsi:type="BoundaryCondition">
        <name xsi:type="Identifier">4.4.bc.aer</name>
        <description>Imposed changing concentrations or emissions of RCP6 aerosols</description>
        <requirementOption>
            <id xsi:type="Identifier">bc.087</id>
            <name xsi:type="Identifier">4.4.bc.aer_conc</name>
            <description>Concentrations</description>            
        </requirementOption>
        <requirementOption>
            <id xsi:type="Identifier">bc.091</id>
            <name xsi:type="Identifier">4.4.bc.aer_em</name>
            <description>Emissions</description>            
        </requirementOption>
    </numericalRequirement>
    
    <numericalRequirement xsi:type="BoundaryCondition">
        <name xsi:type="Identifier">4.4.bc.aer_pre</name>
        <description>Imposed changing concentrations or emissions of RCP6 aerosol precursors</description>
        <requirementOption>
            <id xsi:type="Identifier">bc.088</id>
            <name xsi:type="Identifier">4.4.bc.aer_pre_conc</name>
            <description>Concentrations</description>            
        </requirementOption>
        <requirementOption>
            <id xsi:type="Identifier">bc.092</id>
            <name xsi:type="Identifier">4.4.bc.aer_pre_em</name>
            <description>Emissions</description>            
        </requirementOption>
    </numericalRequirement>
    
    <numericalRequirement xsi:type="BoundaryCondition">
        <id xsi:type="Identifier">bc.093</id>
        <name >4.4.bc.LU</name>
        <description>Imposed changing RCP6 land use</description>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <id xsi:type="Identifier">bc.034</id>
        <name xsi:type="Identifier">4.4.bc.volc_aer_conc</name>
        <description>Imposed constant background volcanic aerosol</description>
    </numericalRequirement>
    
    <shortName>
		4.4 rcp60
	</shortName>
    <longName> 
		4.4 RCP6
	</longName>
    
    <calendar>
        <realCalendar/>
    </calendar>
    <numericalRequirement xsi:type="SpatioTemporalConstraint"><name xsi:type="Identifier">4.4.stc.2006_94yr</name><id xsi:type="Identifier">stc.030</id><description>Begin in 2006 and run for 94 years </description><requiredDuration xsi:type="ClosedDateRange">
		<startDate>2006-01-01T00:00:00Z</startDate>
        <endDate>2100-01-01T00:00:00Z</endDate>
	    <length units="years">94</length>
	</requiredDuration></numericalRequirement>
	
